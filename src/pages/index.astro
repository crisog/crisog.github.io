---
import MainLayout from "../layouts/MainLayout.astro";
import ProjectsList from "../components/ProjectsList.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="relative min-h-screen bg-black text-white overflow-hidden">
    <div class="relative z-10 min-h-screen flex flex-col">
      <main class="flex-1 flex items-center justify-center px-6 py-8">
        <div class="max-w-4xl w-full space-y-12">
          <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
            <div class="relative group">
              <div
                class="absolute inset-0 border border-white/40 transform translate-x-2 translate-y-2 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"
              >
              </div>
              <img
                src="/pfp.jpg"
                alt="Profile"
                class="relative w-48 h-48 md:w-64 md:h-64 object-cover border border-white/60"
              />
            </div>

            <div class="flex-1 space-y-6 text-center md:text-left">
              <div class="space-y-2">
                <h1 class="text-4xl md:text-6xl tracking-tight font-light">
                  Cris
                </h1>
                <div
                  class="flex items-center gap-2 justify-center md:justify-start text-sm opacity-60 tracking-wider"
                >
                  <span>{">"}</span>
                  <span class="typing">Systems Engineer</span>
                </div>
              </div>

              <p class="text-sm leading-relaxed opacity-80 max-w-xl">
                Experienced in building and operating
                distributed systems at scale. Not afraid of servers and enjoys
                getting hands-on with cloud platforms, observability tools, and
                system reliability. Driven by curiosity and skilled at
                troubleshooting complex issues. Strong believer in pragmatic
                solutions and measuring what matters.
              </p>

              <div class="flex gap-4 justify-center md:justify-start">
                <a
                  href="https://github.com/crisog"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="border border-white/40 p-3 hover:bg-white hover:text-black transition-all duration-300"
                >
                  <i class="fab fa-github"></i>
                </a>
                <a
                  href="https://x.com/foundercoded"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="border border-white/40 p-3 hover:bg-white hover:text-black transition-all duration-300"
                >
                  <i class="fab fa-x-twitter"></i>
                </a>
                <a
                  href="mailto:ortega.cpp@gmail.com"
                  class="border border-white/40 p-3 hover:bg-white hover:text-black transition-all duration-300"
                >
                  <i class="fas fa-envelope"></i>
                </a>
              </div>
            </div>
          </div>

          <ProjectsList />
        </div>
      </main>

      <footer class="border-t border-white/20 backdrop-blur-sm">
        <div
          class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between text-xs opacity-60"
        >
          <div class="tracking-widest">Â© {new Date().getFullYear()}</div>
        </div>
      </footer>
    </div>
  </div>
</MainLayout>
