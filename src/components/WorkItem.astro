---
interface Props {
  company: string;
  role: string;
  period: string;
  githubUrl?: string;
  githubName?: string;
}

const { company, role, period, githubUrl, githubName } = Astro.props;
---

<div class="border border-white/20 p-6 mb-6 hover:border-white/40 transition-colors">
  <h3 class="text-xl tracking-wide mb-2">
    {role} <span class="opacity-60">|</span> {company}
  </h3>
  <p class="text-sm opacity-60 mb-4 tracking-wider">{period}</p>

  <div class="text-sm leading-relaxed opacity-80 space-y-4">
    <slot />
  </div>

  {
    githubUrl && (
      <div class="mt-4 pt-4 border-t border-white/10">
        <a
          href={githubUrl}
          class="text-sm tracking-wider hover:opacity-60 transition-opacity inline-flex items-center gap-2"
        >
          <i class="fab fa-github" /> {githubName || company}
        </a>
      </div>
    )
  }
</div>
